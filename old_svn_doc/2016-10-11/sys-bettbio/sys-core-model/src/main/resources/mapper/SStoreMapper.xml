 <select id="getStoreAndUser" parameterType="java.lang.Integer" resultMap="storeAndUserMap">
 SELECT
 	e.ID STORE_ID,
 	r.ID USER_ID, 
	e.NAME,
	r.NAME LINKMAN,
	e.LANDLINE,
	r.PHONE,
	e.EMAIL,
	e.ADDRESS,
	e.CHINESE_ABOUT,
	e.ENGLISH_ABOUT,
	r.QQ,
	e.STORE_URL,
	e.IS_SEED_USER,
	e.LICENSE_IMAGE_URL
FROM
	S_STORE e,
	S_STORE_USER r
WHERE
	e.CODE = r.STORE_CODE
	and r.ID = #{userId}
 </select>
 
 <select id="getStoreAndDefaultUser" parameterType="com.bettbio.core.model.SStore" resultMap="storeAndUserMap">
 SELECT
 	e.ID STORE_ID,
 	r.ID USER_ID, 
	e.NAME,
	r.NAME LINKMAN,
	e.LANDLINE,
	r.PHONE,
	e.EMAIL,
	e.ADDRESS,
	e.CHINESE_ABOUT,
	e.ENGLISH_ABOUT,
	r.QQ,
	e.STORE_URL,
	e.IS_SEED_USER,
	e.LICENSE_IMAGE_URL
FROM
	S_STORE e,
	S_STORE_USER r
WHERE
	e.CODE = r.STORE_CODE
	and r.PARENT_CODE = 'defult'
	<if test="code != null">
	and e.CODE = #{code}
	</if>
 </select>
 
 <select id="selectStoreByExhibitionCode" resultMap="ExhibitionStoreBoMap">
  select E.ID,
	E.CODE,
	E.NAME,E.REMARKS,E.LOGO_URL,E.IS_AUTH,E.TYPE,E.CREATE_DATE,E.UPDATE_DATE,E.BACKGROUND_IMAGE_URL,
	E.MECHANISM_CODE,E.FREQUENCY,E.IS_ACTIVATION,E.IS_SEED_USER,E.IS_DISABLE,E.SOURCE,E.REGISTERED_CAPITAL,
	E.SET_UP_TIME,E.EMAIL,E.IS_DELETED,E.ADDRESS,E.CHINESE_ABOUT,E.ENGLISH_ABOUT,E.STORE_URL,E.LANDLINE,
	E.LICENSE_IMAGE_URL,D.IS_AFFIRM,D.FILE_URL,D.id EXHIBITION_ID from S_STORE E, EXHIBITION_RECORD D where E.CODE = D.STORE_CODE
 	and D.EXHIBITION_CODE = #{code} 
 	<if test="name != null">
 	and E.NAME  like CONCAT('%',#{name},'%')
 	</if>
 	ORDER BY D.CREATE_DATE DESC
  </select>
  
