					0xC2E8,
					0xC4C3,
					0xC5B6,
					0xC5BE,
					0xC6DA,
					0xC8BB,
					0xC8F6,
					0xCBFA,
					0xCDDA,
					0xCEF4,
					0xD1B9,
					0xD4D1
				),
				'A',
				'B',
				'C',
				'D',
				'E',
				'F',
				'G',
				'H',
				'J',
				'K',
				'L',
				'M',
				'N',
				'O',
